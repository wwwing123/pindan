/**index.wxss**/
.container {
  background: #f7f7f7;
}
.imgBox {
  width:100%;
  font-size: 0;
  background: #f7f7f7
}
image{
  width:100%;
}
.inputBox {
  margin:40rpx;
  border-radius: 40rpx;
  box-shadow: 0px 0px 10px #ccc;
  background: #fff;
  text-align: center;
}

.inputBox .van-cell__title {
  text-align: left;
}

.applyBtn {
  margin:0 auto;
}

.inputTitle {
  text-align: center;
  padding-bottom: 50rpx;
  font-size: 14pt;
}

.modal-body{
  padding-bottom:20rpx;
}

.modal-body .top{
  position:relative;
}

.modal-body .top image{
  width:100%;
  height:230rpx;
}

.modal-body .top .title{
  width:100%;
  height:100rpx;
  position:absolute;
  text-align:center;
  color:#000;
  font-size:16pt;
  bottom:10rpx;
  left:0;
  vertical-align:bottom;
}

.modal-body .content{
  padding:40rpx 80rpx;
  font-size:12pt;
  color:#000;
   word-break:break-all; 
  overflow:hidden;
  box-sizing:border-box;
  word-wrap:break-word;
}

.modal-body .confirm{
  width:90%;
  height:80rpx;
  margin:0 auto;
  color:#000;
  font-size:12pt;
  text-align:center;
  line-height:80rpx;
  border-radius:5px;
  background:#EFEC4F;
}