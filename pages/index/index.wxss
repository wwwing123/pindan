/**index.wxss**/
image{
  width:100%;
}

.modal-body{
  padding-bottom:20rpx;
}

.modal-body .top{
  position:relative;
}

.modal-body .top image{
  width:100%;
  height:230rpx;
}

.modal-body .top .title{
  width:100%;
  height:100rpx;
  position:absolute;
  text-align:center;
  color:#000;
  font-size:16pt;
  bottom:10rpx;
  left:0;
  vertical-align:bottom;
}

.modal-body .content{
  padding:40rpx 80rpx;
  font-size:12pt;
  color:#000;
   word-break:break-all; 
  overflow:hidden;
  box-sizing:border-box;
  word-wrap:break-word;
}

.modal-body .confirm{
  width:90%;
  height:80rpx;
  margin:0 auto;
  color:#000;
  font-size:12pt;
  text-align:center;
  line-height:80rpx;
  border-radius:5px;
  background:#EFEC4F;
}