.container {
  height: 100%;
  padding-top:142rpx;
}

.page__bd {
  width: 100%;
}

.select{
  position:fixed;
  top:0;
  left:0;
  background:#fff;
  height:88rpx;
  z-index:2;
}

.page__bd .company{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  display:flex;
  font-size:12pt;
}

.page__bd .type{
  width:300rpx;
  display:flex;
  font-size:12pt;
}

.page__bd .type{
  width:200rpx;
  font-size:12pt;
}

.weui-cell .comlabel{
  width:29%;
  text-align:center;
  font-size:12pt;
}

.foodlabel{
  width:60%;
  text-align:center;
  font-size:12pt;
}

.weui-cell picker{
  flex:1;
}

.content{
  width:100%;
}

.content .title{
  font-size:12pt;
  color:#999;
  position:fixed;
  top:88rpx;
  left:0;
  width: 100%;
  height:54rpx;
  background:#fff;
  z-index:2;
}

.content .name{
  display:inline-block;
  width:25%;
  text-align:center;
  vertical-align:middle;
}

.content .ordernum{
  display:inline-block;
  width:37%;
  text-align:center;
  vertical-align:middle;
}

.content .food{
  display:inline-block;
  width:38%;
  text-align:center;
  vertical-align:middle;
}

.orderlist{
  font-size:12pt;
}

.orderlist .listobox{
  border-bottom:1rpx solid #d9d9d9;
}

.nodata .icon-nodata{
  font-size:100pt;
}

.nodata .tip{
  text-align:center;
}

.icon-count{
  font-size:25pt;
}

.content>.count{
  position:fixed;
  right:30rpx;
  bottom:48rpx;
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  background:#868686;
  opacity:0.9;
  color:#fff;
  font-size:12pt;
  text-align:center;
  line-height:100rpx;
}





