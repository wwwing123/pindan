<view class="container">
  <view class="empty" wx:if="{{shopcar.sum <= 0}}" >
    <view class="iconfont icon-gouwuche1"></view>
    <view class="text">购物车还是空的</view>
    <button class="weui-btn" catchtap="toClassify" catchtap="toClassify">马上逛逛</button>
  </view>
  <view class="main" wx:else >
    <view class="title">
      <view class="orderNum" wx:if="{{orderNum}}">订单号: {{orderNum}}</view>
      <view class="time">{{time}}</view>     
    </view>
    <view class="table">
        <view class="tr">
            <view class="th">菜名</view>
            <view class="th">数量</view>
            <view class="th">价格</view>
        </view>
        <view class="tr" wx:for="{{shopcar.list}}" wx:key="id" wx:for-item="foods">
            <view class="td">{{foods.name}}</view>
            <view class="td">{{foods.count}}</view>
            <view class="td">{{foods.price}}</view>
        </view>
        <view class="total">总计: ￥{{shopcar.total}}</view>   
    </view>
    <view class="page__bd page__bd_spacing">
      <button class="weui-btn" type="primary" wx:if="{{shopcar.status==0}}" style="background:#0096FF;width:96%;margin-top:20rpx;">下单</button>
      <button class="weui-btn" type="primary" wx:if="{{shopcar.status==1}}" style="width:96%;">取餐</button>
      <button class="weui-btn" type="primary" wx:if="{{shopcar.status==1}}" style="background:#2B343C;width:96%;">放弃</button>    
    </view>
  </view>
</view>